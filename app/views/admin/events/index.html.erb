<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titre</th>
        <th scope="col">Lieu</th>
        <th scope="col">Date</th>
        <th scope="col">Organizateur</th>
        <th scope="col">Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @events.each do |event| %> 
          <tr>
            <th scope="row"><%= i %></th>
              <td> <%= event.title %> </td>
              <td> <%= event.location %> </td>
              <td> <%= event.start_date%></td>
              <td> <%= link_to "#{event.organizer}", user_path(event) %></td>
              <td> <%= link_to 'Supprimer', admin_event_path(event.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
              <%i += 1 %>
            </th>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
