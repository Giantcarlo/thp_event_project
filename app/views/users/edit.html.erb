<h2 class="text-center"> Editer les informations</h2><br>

<div class="container">

  <%= form_for @user, url: {action: "update"}, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form-group">
      <%= f.label :fist_name, "First name:", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "Last name:", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
      <div class="col-md-4">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>


    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
  <% end %>
</div>