<h1 class="text-center">Mon profil<h1>
<div class="container">
  <div class="text-center">
    <h3>Prénom: <%= @user.first_name %></h3>
    <h3>Nom: <%= @user.last_name %></h3>
    <h3>Email: <%= @user.email %></h3>
    <h3>Description:</h3>
    <p> <%= @user.description %></p> 
  </div>
</div>

<div class="container">
  <div class="d-flex">
    <div class="list-group mx-auto">
      <%@user.events.each do |event|%>
        <div class="list-group-item list-group-item-action">
          <%= link_to "La page de l'évènement", event_path(event.id)%>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-4"><%= event.title %></h5>
            <small class="text-muted"><%= event.start_date%></small>
          </div>
          <p class="mb-1"><%= event.description %></p>
          <small class="text-muted"><%= event.price %> Euros</small>
          </div>
      <%end%>
    </div>
  </div>
</div>


