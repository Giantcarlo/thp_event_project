<div class="jumbotron">
  <%if user_signed_in? == true%>
  <h5 class="text-center">Bonjour <%= current_user.first_name %> !</h5>
  <%end%>
  <h3 class="text-center display-4">Voici tous les évènements dans ta ville</h3><br>
  <div class=text-center>
    <h5><%= link_to "Créer un évènement" , new_event_path %></h5>
  </div>
</div>

<div class="container">
  <div class = "card-columns">
    <% @events.each do |event| %>
      <div class="card" style="width: 20rem;">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= event.start_date %></h6>
          <p class="card-text"><%= event.description %></p>
          <div class="justify-content-between">
            <a href="#" class="card-link"><%= link_to "La page de l'évènement", event_path(event.id) %></a><br>
            <p>Price:
            <span class="badge badge-primary badge-pill"><%=event.price%></span></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
